<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_foto_perfil"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_width="120dp"
        android:layout_height="120dp" />

    <ImageView
        android:id="@+id/iv_seleccion_foto"
        android:layout_below="@id/iv_foto_perfil"
        android:layout_centerHorizontal="true"
        android:src="@drawable/outline_add_a_photo_24"
        android:layout_width="50dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/tv_titulo_matricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matricula"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/iv_seleccion_foto"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/tv_matricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zS22016127"
        android:textSize="12sp"
        android:layout_below="@id/tv_titulo_matricula"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/tv_titulo_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Completo"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/tv_matricula"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jorge Luis Ortega Zenteno"
        android:textSize="12sp"
        android:layout_below="@id/tv_titulo_nombre"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/tv_titulo_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/tv_nombre"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/tv_correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zS230000@estudiantes.uv.mx"
        android:textSize="12sp"
        android:layout_below="@id/tv_titulo_correo"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/tv_titulo_fecha_nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/tv_correo"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/tv_fecha_nacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/1/2000"
        android:textSize="12sp"
        android:layout_below="@id/tv_titulo_fecha_nacimiento"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/tv_titulo_carrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carrera"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/tv_fecha_nacimiento"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/tv_carrera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tecnologias Computacionales"
        android:textSize="12sp"
        android:layout_below="@id/tv_titulo_carrera"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:id="@+id/tv_titulo_facultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facultad"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@id/tv_carrera"
        android:layout_marginTop="18dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:id="@+id/tv_facultad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facultad de Estadistica e Informatica"
        android:textSize="12sp"
        android:layout_below="@id/tv_titulo_facultad"
        android:layout_marginTop="14dp"
        android:layout_marginStart="40dp" />

    <ImageView
        android:id="@+id/iv_editar_alumno"
        android:layout_width="53dp"
        android:layout_height="145dp"
        android:layout_below="@id/iv_seleccion_foto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="406dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="-4dp"
        android:src="@drawable/outline_catching_pokemon_24" />

</RelativeLayout>